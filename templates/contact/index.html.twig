{% extends 'base.html.twig' %}

{% block title %} Same my store - Formulaire de contact {% endblock %}

{% block body %}

{{ form_start(contactForm) }}
<div class="container mb-4 mt-4">
  <div class="card">
    <div class="card-body">
      <form>
        <div class="card-body">
          <div class="cust-cont-center">
            <h2 class="cust-form-title">How we can help you ?</h2>
          </div>
            <div class="d-flex flex-column align-items-center">
              <div class="form-group col-md-3">
                {{ form_label(contactForm.object)}}
                {{ form_widget(contactForm.object, { 'attr': {'class': 'form-control'} })}}
              </div>
              <div class="form-group col-md-3">
                {{ form_label(contactForm.email)}}
                {{ form_widget(contactForm.email, { 'attr': {'class': 'form-control'} })}}
              </div>
              <div class="form-group col-md-6">
                {{ form_label(contactForm.message)}}
                {{ form_widget(contactForm.message, { 'attr': {'class': 'form-control'} })}}
              </div>
            </div>
            <div class="d-flex justify-content-center">
              {{ form_widget(contactForm.submit)}}
          </div>

        </div>
      </form>
    </div>
  </div>
</div>
{{ form_end(contactForm) }}

{% endblock %}
