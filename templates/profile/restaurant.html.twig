{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
    <div class="info col-4">
        {% for info in infosPatron %}
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle"
                             width="150">
                        <div class="mt-3">
                            <h4>John Doe</h4>
                            <p class="text-secondary mb-1">{{ info.nom }}</p>
                            <p class="text-secondary mb-1">{{ info.prenom }}</p>
                            <p class="text-muted font-size-sm">{{ info.code_postal }}, {{ info.immeuble }}
                                , {{ info.rue }}</p>
                            <p class="text-secondary mb-1">{{ info.tel }}</p>
                            <p class="text-secondary mb-1">{{ info.email }}</p>
                            <a href="/profile/edit_profile_ro/{{ app.user.patronrestaurant.id }}" class="nav-link far fa-user ftaw-user w-color">
                            <button class="btn-custom ">Edit</button>
                            </a>
                            <a href="/profile/add_restaurant_ro/{{ app.user.patronrestaurant.id }}" class="nav-link far fa-user ftaw-user w-color">
                            <button class="btn-custom">Ajouter une entreprise</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    {% for info in infosRestaurants %}
        <div class="col">
            <div class="card">
                <div class="card-body">
                    <p class="text-secondary mb-1">{{ info.camis }}</p>
                    <p class="text-secondary mb-1">{{ info.nom_resto }}</p>
                    <p class="text-secondary mb-1">{{ info.immeuble_resto }}</p>
                    <p class="text-secondary mb-1">{{ info.rue_resto }}</p>
                    <p class="text-secondary mb-1">{{ info.code_postal_resto }}</p>
                    <a href="/profile/restaurant_owner/{{ info.id_resto }}/missions">Voir les Missions</a>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
