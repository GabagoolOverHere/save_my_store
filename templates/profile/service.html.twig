{% extends 'base.html.twig' %}

{% block title %}{{ infosPatron[0].nom }}'s Profile{% endblock %}

{% block body %}
    <div class="card-container mh-75">
        <div class="container mt-5">
            <div class="row mb-3">
                {% if missions[0] is defined %}
                    <div class="missions col-8">
                        <h2>Récapitulatif des missions</h2>
                        <div class="card">
                            <div class="card-body">
                                {% for mission in missions %}

                                    <p class="text-dark">Mission#{{ mission.id }}</p>
                                    <p>Description: {{ mission.descriptif }}</p>

                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="missions col-8">
                        <h2>No mission is set</h2>
                    </div>
                {% endif %}
                <div class="info col-4">
                    {% for info in infosPatron %}
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex flex-column align-items-center text-center">
                                    <div class="mt-3">
                                        <p class="text-secondary mb-1">{{ info.nom }}</p>
                                        <p class="text-secondary mb-1">{{ info.prenom }}</p>
                                        <p class="text-muted font-size-sm">{{ info.code_postal }}, {{ info.immeuble }}
                                            , {{ info.rue }}</p>
                                        <p class="text-secondary mb-1">{{ info.tel }}</p>
                                        <p class="text-secondary mb-1">{{ info.email }}</p>
                                        <a href="/profile/edit_profile_so/{{ app.user.patronprestataire.id }}"
                                           class="nav-link far fa-user ftaw-user w-color">
                                            <button class="btn-custom ">Edit</button>
                                        </a>
                                        <a href="/profile/add_society/{{ app.user.patronprestataire.id }}"
                                           class="nav-link far fa-user ftaw-user w-color">
                                            <button class="btn-custom">Ajouter une entreprise</button>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                {% for info in infosPrestataires %}
                    <div class="col mb-3">
                        <div class="card">
                            <div class="card-body">
                                <p>Nom de la boîte: {{ info.nom_presta }}</p>
                                <p>Immeuble de la boite: {{ info.immeuble_presta }}</p>
                                <p>Rue de la boite{{ info.rue_presta }}</p>
                                <p>Code postal de la boite: {{ info.code_postal_presta }}</p>
                                <a href="/profile/service_owner/{{ info.id_presta }}/missions">Voir les Missions</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>

{% endblock %}
